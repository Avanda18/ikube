<!DOCTYPE aspectj PUBLIC
        "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>

	<weaver options="-verbose -showWeaveInfo">
	    <include within="ikube.action.*" />
	    <include within="ikube.action.rule.*" />
	    <include within="ikube.index.handler.*" />
	    <include within="ikube.index.handler.filesystem.*" />
	</weaver>

	<aspects>
		<aspect name="ikube.action.rule.RuleInterceptor" />
		<aspect name="ikube.index.handler.StrategyInterceptor" />
	</aspects>
</aspectj>