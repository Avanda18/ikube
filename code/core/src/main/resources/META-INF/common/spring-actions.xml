<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:transaction="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
	<aop:aspectj-autoproxy proxy-target-class="true" />
	
	<bean
		class="ikube.IndexEngine"
		property:actions-ref="actions" />
	<util:list id="actions">
		<ref bean="ikube.action.Reset" /> 
		<ref bean="ikube.action.Close"  />
		<ref bean="ikube.action.Open"  />
		<ref bean="ikube.action.Index"  />
		<ref bean="ikube.action.Delete" />
		<ref bean="ikube.action.Clean" />
		<ref bean="ikube.action.Backup" />
		<ref bean="ikube.action.Restore" />
	</util:list>

	<bean 
		id="ikube.action.Reset" 
		class="ikube.action.Reset" 
		property:predicate="!AnyServersWorking">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.AnyServersWorking" />
			</util:list>
		</property>
	</bean>
	<bean 
		id="ikube.action.Close" 
		class="ikube.action.Close" 
		property:predicate="IsMultiSearcherInitialised &#38;&#38; AreSearchablesInitialised &#38;&#38; !IsIndexCurrent &#38;&#38; AreIndexesCreated &#38;&#38; AreUnopenedIndexes">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.IsMultiSearcherInitialised" />
				<ref local="ikube.action.rule.AreSearchablesInitialised" />
				<ref local="ikube.action.rule.IsIndexCurrent" />
				<ref local="ikube.action.rule.AreIndexesCreated" />
				<ref local="ikube.action.rule.AreUnopenedIndexes" />
			</util:list>
		</property>
	</bean>
	<bean 
		id="ikube.action.Open" 
		class="ikube.action.Open" 
		property:predicate="(!IsMultiSearcherInitialised || !AreSearchablesInitialised) &#38;&#38; IsIndexCurrent &#38;&#38; AreIndexesCreated &#38;&#38; AreUnopenedIndexes">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.IsMultiSearcherInitialised" />
				<ref local="ikube.action.rule.AreSearchablesInitialised" />
				<ref local="ikube.action.rule.IsIndexCurrent" />
				<ref local="ikube.action.rule.AreIndexesCreated" />
				<ref local="ikube.action.rule.AreUnopenedIndexes" />
			</util:list>
		</property>
	</bean>
	<bean 
		id="ikube.action.Index" 
		class="ikube.action.Index" 
		property:predicate="(!IsIndexCurrent &#38;&#38; !AnyServersWorking) || (IsIndexCurrent &#38;&#38; AnyServersWorking &#38;&#38; !IsThisIndexCreated) || (!AreIndexesCreated)">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.IsIndexCurrent" />
				<ref local="ikube.action.rule.AnyServersWorking" />
				<ref local="ikube.action.rule.AreIndexesCreated" />
				<ref local="ikube.action.rule.IsThisIndexCreated" />
			</util:list>
		</property>
	</bean>
	<bean 
		id="ikube.action.Delete" 
		class="ikube.action.Delete" 
		property:predicate="AreIndexesCreated">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.AreIndexesCreated" />
			</util:list>
		</property>
	</bean>
	<bean 
		id="ikube.action.Clean" 
		class="ikube.action.Clean" 
		property:predicate="!AnyServersWorking">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.AnyServersWorking" />
			</util:list>
		</property>
	</bean>
	<bean 
		id="ikube.action.Backup" 
		class="ikube.action.Clean" 
		property:predicate="!AnyServersWorking">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.AnyServersWorking" />
			</util:list>
		</property>
	</bean>
	<bean 
		id="ikube.action.Restore" 
		class="ikube.action.Clean" 
		property:predicate="!AnyServersWorking &#38;&#38; IndexesAreCorrupt">
		<property name="rules">
			<util:list>
				<ref local="ikube.action.rule.AnyServersWorking" />
				<ref local="ikube.action.rule.IndexesAreCorrupt" />
			</util:list>
		</property>
	</bean>
	
	<bean
		id="ikube.action.rule.IsInMemory" 
		class="ikube.action.rule.IsInMemory" />
	<bean
		id="ikube.action.rule.AnyServersWorking" 
		class="ikube.action.rule.AnyServersWorking" />
	<bean 
		id="ikube.action.rule.AreDirectoriesEqual"
		class="ikube.action.rule.AreDirectoriesEqual" />
	<bean 
		id="ikube.action.rule.AreIndexesCreated"
		class="ikube.action.rule.AreIndexesCreated" />
	<bean 
		id="ikube.action.rule.AreSearchablesInitialised"
		class="ikube.action.rule.AreSearchablesInitialised" />
	<bean 
		id="ikube.action.rule.AreUnopenedIndexes"
		class="ikube.action.rule.AreUnopenedIndexes" />
	<bean 
		id="ikube.action.rule.DirectoryExistsAndIsLocked"
		class="ikube.action.rule.DirectoryExistsAndIsLocked" />
	<bean 
		id="ikube.action.rule.DirectoryExistsAndNotLocked"
		class="ikube.action.rule.DirectoryExistsAndNotLocked" />
	<bean 
		id="ikube.action.rule.IsIndexCurrent"
		class="ikube.action.rule.IsIndexCurrent" />
	<bean 
		id="ikube.action.rule.IsMultiSearcherInitialised"
		class="ikube.action.rule.IsMultiSearcherInitialised" />
	<bean 
		id="ikube.action.rule.IsThisIndexCreated"
		class="ikube.action.rule.IsThisIndexCreated" />
	<bean 
		id="ikube.action.rule.IndexesAreCorrupt"
		class="ikube.action.rule.IndexesAreCorrupt" />
	
</beans>