<?xml version="1.0" encoding="UTF-8"?>

<!--
	This is the standard configuration for indexing the Ikube documentation wherever 
	it is deployed. We assume the port to be the default, i.e. 9000, although this may not be 
	the case. The online documentation should mention this and the search results 
	should also.
 -->
<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd">

	<context:property-placeholder
		location="classpath*:**/spring.properties" 
		properties-ref="ikube.toolkit.PropertyConfigurer" />
	
	<bean
		id="ikube"
		class="ikube.model.IndexContext"
		property:indexName="ikube"
		property:maxAge="6000"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="32"
		property:internetBatchSize="1"
		property:mergeFactor="10"
		property:maxFieldLength="10000"
		property:maxReadLength="10000000"
		property:queueTimeout="84600000"
		property:throttle="0"
		property:indexDirectoryPath="./ikube/documentation"
		property:indexables-ref="indexables" />
	<util:list id="indexables">
		<ref local="internet" />
	</util:list>
	
	<bean
		id="internet"
		class="ikube.model.IndexableInternet"
		property:name="internet"
		property:url="http://localhost:9000/ikube/index.html" 
		property:idFieldName="id"
		property:titleFieldName="title"
		property:contentFieldName="content"
		property:excludedPattern=".*(/search).*|.*(/images).*"
		property:analyzed="true"
		property:stored="true"
		property:vectored="true" />
	
</beans>