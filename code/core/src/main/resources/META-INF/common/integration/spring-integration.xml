<?xml version="1.0" encoding="UTF-8"?>

<!--
	This configuration contains all classes that will perform integration validation. 
 -->
<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:property-placeholder
		location="classpath*:**/spring.properties" 
		properties-ref="ikube.toolkit.PropertyConfigurer" />
	
	<bean
		id="ikube.monitoring.SearcherWebServiceExecuter"
		class="ikube.monitoring.SearcherWebServiceExecuter"
		property:indexName="${searcher.index.name}"
		property:fragment="${searcher.fragment}"
		property:resultsSizeMinimum="${searcher.minimum.results.size}"
		property:searchString="${searcher.search.string}"
		property:start="${searcher.start.index}"
		property:end="${searcher.end.index}"
		property:iterations="${searcher.iterations}" />
		
</beans>