<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd">

	<bean
		id="campaignIndex"
		class="ikube.model.IndexContext"
		property:name="campaignIndex"
		property:maxAge="${max.age}"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="${buffer.size}"
		property:batchSize="${jdbc.batch.size}"
		property:internetBatchSize="${internet.batch.size}"
		property:mergeFactor="${merge.factor}"
		property:maxFieldLength="${max.field.length}"
		property:maxReadLength="${max.read.length}"
		property:queueTimeout="${max.age}"
		property:throttle="${throttle}"
		property:indexDirectoryPath="${index.directory.path}"
		property:indexDirectoryPathBackup="${index.directory.path.backup}"
		property:children-ref="campaignIndexables" />
	<util:list id="campaignIndexables">
		<ref local="campaign" />
	</util:list>
	<bean
		id="campaign"
		class="ikube.model.IndexableTable"
		property:name="campaign"
		property:primaryTable="true"
		property:dataSource-ref="campaignDatabase"
		property:children-ref="campaignChildren" 
		property:maxExceptions="100" />
	<util:list id="campaignChildren">
		<ref local="campaign_id" />
		<ref local="campaign_set_id" />
		<ref local="truvo_orderline_pub_id" />
		<ref local="notes_cmp" />
		<ref local="more_info_url" />
		<ref local="more_info_email" />
		<ref local="status" />
		<ref local="date_created" />
		<ref local="date_updated" />
		<ref local="created_by" />
		<ref local="updated_by" />
		<ref local="external_campaign_id" />
		<ref local="banner_body_text" />
		<ref local="banner_set_id" />
		<!-- <ref local="position" /> -->
	</util:list>
	
	<bean
		id="campaign_id"
		class="ikube.model.IndexableColumn"
		property:name="id"
		property:idColumn="true"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="campaign_set_id"
		class="ikube.model.IndexableColumn"
		property:name="campaign_set_id"
		property:fieldName="campaign_set_id"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="truvo_orderline_pub_id"
		class="ikube.model.IndexableColumn"
		property:name="truvo_orderline_pub_id"
		property:fieldName="truvo_orderline_pub_id"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="notes_cmp"
		class="ikube.model.IndexableColumn"
		property:name="notes_cmp"
		property:fieldName="notes_cmp"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="more_info_url"
		class="ikube.model.IndexableColumn"
		property:name="more_info_url"
		property:fieldName="more_info_url"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="more_info_email"
		class="ikube.model.IndexableColumn"
		property:name="more_info_email"
		property:fieldName="more_info_email"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="status"
		class="ikube.model.IndexableColumn"
		property:name="status"
		property:fieldName="status"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="date_created"
		class="ikube.model.IndexableColumn"
		property:name="date_created"
		property:fieldName="date_created"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="date_updated"
		class="ikube.model.IndexableColumn"
		property:name="date_updated"
		property:fieldName="date_updated"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="created_by"
		class="ikube.model.IndexableColumn"
		property:name="created_by"
		property:fieldName="created_by"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="updated_by"
		class="ikube.model.IndexableColumn"
		property:name="updated_by"
		property:fieldName="updated_by"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="external_campaign_id"
		class="ikube.model.IndexableColumn"
		property:name="external_campaign_id"
		property:fieldName="external_campaign_id"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="banner_body_text"
		class="ikube.model.IndexableColumn"
		property:name="banner_body_text"
		property:fieldName="banner_body_text"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="banner_set_id"
		class="ikube.model.IndexableColumn"
		property:name="banner_set_id"
		property:fieldName="banner_set_id"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	
	<bean
		id="position"
		class="ikube.model.IndexableTable"
		property:name="position"
		property:primaryTable="false"
		property:dataSource-ref="campaignDatabase"
		property:children-ref="positionChildren" 
		property:maxExceptions="100" />
	<util:list id="positionChildren">
		<!-- <ref local="id" />
		<ref local="campaign_id" />
		<ref local="positionText" />
		<ref local="banner" /> -->
	</util:list>
	<bean
		id="positionText"
		class="ikube.model.IndexableTable"
		property:name="position_text"
		property:primaryTable="false"
		property:dataSource-ref="campaignDatabase"
		property:children-ref="positionTextChildren" 
		property:maxExceptions="100" />
	<util:list id="positionTextChildren">
		<!-- <ref local="id" />
		<ref local="position_id" />
		<ref local="type" />
		<ref local="text" /> -->
	</util:list>
	<bean
		id="banner"
		class="ikube.model.IndexableTable"
		property:name="banner"
		property:primaryTable="false"
		property:dataSource-ref="campaignDatabase"
		property:children-ref="bannerChildren" 
		property:maxExceptions="100" />
	<util:list id="bannerChildren">
		<!-- <ref local="id" />
		<ref local="position_id" />
		<ref local="workflow_id" />
		<ref local="ref_file_name" />
		<ref local="ref_file_type" /> -->
	</util:list>
		
</beans>