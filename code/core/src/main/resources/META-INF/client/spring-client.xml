<?xml version="1.0" encoding="UTF-8"?>

<!--
	1) DB2 - Faq
	2) Oracle - Hospital
	5) Url - Google Code/Ikube
	6) File system local - server
	8) Email - Ikube
 -->
<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd">

	<context:property-placeholder
		location="classpath*:**/spring.properties" 
		properties-ref="ikube.toolkit.PropertyConfigurer" />
	
	<import resource="classpath:/META-INF/client/datasource/spring-h2-jdbc.xml" />
	<import resource="classpath:/META-INF/client/datasource/spring-db2-jdbc.xml" />
	<import resource="classpath:/META-INF/client/datasource/spring-oracle-jdbc.xml" />

	<bean
		id="indexContext"
		class="ikube.model.IndexContext"
		property:indexName="index"
		property:maxAge="${max.age}"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="${buffer.size}"
		property:batchSize="${jdbc.batch.size}"
		property:internetBatchSize="${internet.batch.size}"
		property:mergeFactor="${merge.factor}"
		property:maxFieldLength="${max.field.length}"
		property:maxReadLength="${max.read.length}"
		property:queueTimeout="${max.age}"
		property:throttle="${throttle}"
		property:indexDirectoryPath="${index.directory.path}"
		property:indexDirectoryPathBackup="${index.directory.path.backup}"
		property:indexables-ref="indexables" />
	<util:list id="indexables">
		<ref local="mail" />
		<ref local="internet" />
		<ref local="filesystem" />
		<ref bean="faqTableH2" />
		<ref bean="faqTableDb2" />
		<ref bean="patientTableOracle" />
	</util:list>

	<!-- H2 Faqs -->
	<bean
		id="faqTableH2"
		class="ikube.model.IndexableTable"
		property:name="faq"
		property:predicate="${faq.predicate}"
		property:primary="true"
		property:dataSource-ref="nonXaDataSourceH2"
		property:children-ref="faqColumnsH2" />
	<util:list id="faqColumnsH2">
		<ref local="faqIdH2" />
		<ref local="creationtimestampH2" />
		<ref local="modifiedtimestampH2" />
		<ref local="creatorH2" />
		<ref local="modifierH2" />
		<ref local="questionH2" />
		<ref local="answerH2" />
		<ref local="publishedH2" />
		<ref local="attachmentTableH2" />
	</util:list>

	<bean
		id="faqIdH2"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:idColumn="true"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="creationtimestampH2"
		class="ikube.model.IndexableColumn"
		property:name="creationtimestamp"
		property:fieldName="creationtimestamp"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="modifiedtimestampH2"
		class="ikube.model.IndexableColumn"
		property:name="modifiedtimestamp"
		property:fieldName="modifiedtimestamp"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="creatorH2"
		class="ikube.model.IndexableColumn"
		property:name="creator"
		property:fieldName="creator"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="modifierH2"
		class="ikube.model.IndexableColumn"
		property:name="modifier"
		property:fieldName="modifier"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="questionH2"
		class="ikube.model.IndexableColumn"
		property:name="question"
		property:fieldName="question"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="answerH2"
		class="ikube.model.IndexableColumn"
		property:name="answer"
		property:fieldName="answer"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="publishedH2"
		class="ikube.model.IndexableColumn"
		property:name="published"
		property:fieldName="published"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />

	<bean
		id="attachmentTableH2"
		class="ikube.model.IndexableTable"
		property:name="attachment"
		property:primary="false"
		property:dataSource-ref="nonXaDataSourceH2"
		property:children-ref="attachmentColumnsTwoH2" />
	<util:list id="attachmentColumnsTwoH2">
		<ref local="attachmentFaqIdH2" />
		<ref local="attachmentIdH2" />
		<ref local="nameH2" />
		<ref local="attachmentH2" />
		<ref local="lengthH2" />
	</util:list>

	<bean
		id="attachmentFaqIdH2"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:fieldName="attachmentFaqId"
		property:foreignKey-ref="faqIdH2"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="attachmentIdH2"
		class="ikube.model.IndexableColumn"
		property:name="attachmentId"
		property:fieldName="attachmentId"
		property:idColumn="true"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="nameH2"
		class="ikube.model.IndexableColumn"
		property:name="name"
		property:fieldName="name"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="attachmentH2"
		class="ikube.model.IndexableColumn"
		property:name="attachment"
		property:fieldName="attachment"
		property:nameColumn-ref="nameH2"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="lengthH2"
		class="ikube.model.IndexableColumn"
		property:name="length"
		property:fieldName="length"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
		
	<!-- Db2 Faqs -->
	<bean
		id="faqTableDb2"
		class="ikube.model.IndexableTable"
		property:name="faq"
		property:predicate="${faq.predicate}"
		property:primary="true"
		property:dataSource-ref="nonXaDataSourceDb2"
		property:children-ref="faqColumnsDb2" />
	<util:list id="faqColumnsDb2">
		<ref local="faqIdDb2" />
		<ref local="creationtimestampDb2" />
		<ref local="modifiedtimestampDb2" />
		<ref local="creatorDb2" />
		<ref local="modifierDb2" />
		<ref local="questionDb2" />
		<ref local="answerDb2" />
		<ref local="publishedDb2" />
		<ref local="attachmentTableDb2" />
	</util:list>

	<bean
		id="faqIdDb2"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:idColumn="true"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="creationtimestampDb2"
		class="ikube.model.IndexableColumn"
		property:name="creationtimestamp"
		property:fieldName="creationtimestamp"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="modifiedtimestampDb2"
		class="ikube.model.IndexableColumn"
		property:name="modifiedtimestamp"
		property:fieldName="modifiedtimestamp"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="creatorDb2"
		class="ikube.model.IndexableColumn"
		property:name="creator"
		property:fieldName="creator"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="modifierDb2"
		class="ikube.model.IndexableColumn"
		property:name="modifier"
		property:fieldName="modifier"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="questionDb2"
		class="ikube.model.IndexableColumn"
		property:name="question"
		property:fieldName="question"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="answerDb2"
		class="ikube.model.IndexableColumn"
		property:name="answer"
		property:fieldName="answer"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="publishedDb2"
		class="ikube.model.IndexableColumn"
		property:name="published"
		property:fieldName="published"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />

	<bean
		id="attachmentTableDb2"
		class="ikube.model.IndexableTable"
		property:name="attachment"
		property:primary="false"
		property:dataSource-ref="nonXaDataSourceDb2"
		property:children-ref="attachmentColumnsTwoDb2" />
	<util:list id="attachmentColumnsTwoDb2">
		<ref local="attachmentFaqIdDb2" />
		<ref local="attachmentIdDb2" />
		<ref local="nameDb2" />
		<ref local="attachmentDb2" />
		<ref local="lengthDb2" />
	</util:list>

	<bean
		id="attachmentFaqIdDb2"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:fieldName="attachmentFaqId"
		property:foreignKey-ref="faqIdDb2"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="attachmentIdDb2"
		class="ikube.model.IndexableColumn"
		property:name="attachmentId"
		property:fieldName="attachmentId"
		property:idColumn="true"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="nameDb2"
		class="ikube.model.IndexableColumn"
		property:name="name"
		property:fieldName="name"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="attachmentDb2"
		class="ikube.model.IndexableColumn"
		property:name="attachment"
		property:fieldName="attachment"
		property:nameColumn-ref="nameDb2"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="lengthDb2"
		class="ikube.model.IndexableColumn"
		property:name="length"
		property:fieldName="length"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
		
	<!-- Oracle patients -->
	<bean
		id="patientTableOracle"
		class="ikube.model.IndexableTable"
		property:name="patient"
		property:predicate="${patient.predicate}"
		property:primary="true"
		property:dataSource-ref="nonXaDataSourceOracle"
		property:children-ref="patientColumnsOracle" />
	<util:list id="patientColumnsOracle">
		<ref local="patientIdOracle" />
		<ref local="firstNameOracle" />
		<ref local="lastNameOracle" />
		<ref local="birthDateOracle" />
		<ref local="deathDateOracle" />
	</util:list>

	<bean
		id="patientIdOracle"
		class="ikube.model.IndexableColumn"
		property:name="id"
		property:idColumn="true"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="firstNameOracle"
		class="ikube.model.IndexableColumn"
		property:name="firstName"
		property:fieldName="firstName"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="lastNameOracle"
		class="ikube.model.IndexableColumn"
		property:name="lastName"
		property:fieldName="lastName"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="birthDateOracle"
		class="ikube.model.IndexableColumn"
		property:name="birthDate"
		property:fieldName="birthDate"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="deathDateOracle"
		class="ikube.model.IndexableColumn"
		property:name="deathDate"
		property:fieldName="deathDate"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	
	<bean
		id="addressOracle"
		class="ikube.model.IndexableTable"
		property:name="address"
		property:primary="false"
		property:dataSource-ref="nonXaDataSourceOracle"
		property:children-ref="addressColumnsOracle" />
	<util:list id="addressColumnsOracle">
		<ref local="addressIdOracle" />
	</util:list>

	<bean
		id="addressIdOracle"
		class="ikube.model.IndexableColumn"
		property:name="id"
		property:idColumn="true"
		property:foreignKey-ref="patientIdOracle"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="numberOracle"
		class="ikube.model.IndexableColumn"
		property:name="number"
		property:fieldName="number"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="streetOracle"
		class="ikube.model.IndexableColumn"
		property:name="street"
		property:fieldName="street"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="provinceOracle"
		class="ikube.model.IndexableColumn"
		property:name="province"
		property:fieldName="province"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="countryOracle"
		class="ikube.model.IndexableColumn"
		property:name="country"
		property:fieldName="country"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	<bean
		id="postCodeOracle"
		class="ikube.model.IndexableColumn"
		property:name="postCode"
		property:fieldName="postCode"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />

	<bean
		id="mail"
		class="ikube.model.IndexableEmail"
		property:mailHost="pop.gmail.com"
		property:name="ikube.email"
		property:port="995"
		property:protocol="pop3"
		property:secureSocketLayer="true"
		property:password="caherline"
		property:username="ikube.ikube@gmail.com" 
		property:idField="identifier"
		property:contentField="email"
		property:titleField="title" />
	
	<bean
		id="internet"
		class="ikube.model.IndexableInternet"
		property:name="internet"
		property:url="${url}" 
		property:idFieldName="id"
		property:titleFieldName="title"
		property:contentFieldName="content"
		property:excludedPattern=".*(/search).*|.*(/images).*"
		property:analyzed="${analyzed}"
		property:stored="${stored}"
		property:vectored="${vectored}" />
	
	<bean
		id="filesystem"
		class="ikube.model.IndexableFileSystem"
		property:name="filesOne"
		property:path="${files.path}"
		property:pathFieldName="path"
		property:nameFieldName="name"
		property:lengthFieldName="length"
		property:contentFieldName="contents"
		property:excludedPattern="${files.excluded.pattern}"
		property:lastModifiedFieldName="lastmodified" />
		
