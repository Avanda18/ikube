<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>ikube</groupId>
	<artifactId>ikube-core</artifactId>
	<packaging>jar</packaging>
	<version>2.1.2-SNAPSHOT</version>

	<properties>
		<main.class>ikube.Ikube</main.class>
		<project.build.sourceEncoding>${encoding}</project.build.sourceEncoding>
	</properties>
	
	<parent>
		<groupId>ikube</groupId>
		<artifactId>ikube</artifactId>
		<version>2.1.2-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<verbose>true</verbose>
					<archive>
						<index>true</index>
						<manifest>
							<addClasspath>true</addClasspath>
							<classpathPrefix>lib/</classpathPrefix>
							<mainClass>${main.class}</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.7.1</version>
				<configuration>
					<skip>true</skip>
				</configuration>
				<executions>
					<execution>
						<id>surefire</id>
						<phase>install</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<skip>false</skip>
							<forkMode>once</forkMode>
							<argLine>-javaagent:../../serenity/serenity.jar -Xms1024m -Xmx1536m -XX:PermSize=64m -XX:MaxPermSize=128m ${included.adapters} ${included.packages} ${excluded.packages} ${write.classes} ${clean.classes}</argLine>
							<excludes>
								<exclude>**/TextParserTest.java</exclude>
								<!-- <exclude>**/DataBaseJpaTest.java</exclude> -->
							</excludes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jxr-maven-plugin</artifactId>
				<version>2.0-beta-1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>target/lib</outputDirectory>
							<overWriteReleases>false</overWriteReleases>
							<overWriteSnapshots>false</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>openjpa-maven-plugin</artifactId>
				<version>1.2</version>
				<configuration>
					<includes>ikube/model/*.class,ikube/model/**/*.class</includes>
					<addDefaultConstructor>false</addDefaultConstructor>
					<enforcePropertyRestrictions>true</enforcePropertyRestrictions>
				</configuration>
				<executions>
					<execution>
						<id>enhancer</id>
						<phase>process-classes</phase>
						<goals>
							<goal>enhance</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.apache.openjpa</groupId>
						<artifactId>openjpa</artifactId>
						<version>2.1.0</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>install-db2-driver</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>com.ibm.db2.jcc</groupId>
							<artifactId>db2jcc4</artifactId>
							<version>9.7.2</version>
							<packaging>jar</packaging>
							<file>libs/drivers/db2jcc4-9.7.2.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-db2-driver-license</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>com.ibm.db2.jcc_license_cu</groupId>
							<artifactId>db2jcc_license_cu</artifactId>
							<version>9.7.2</version>
							<packaging>jar</packaging>
							<file>libs/drivers/db2jcc_license_cu-9.7.2.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-oracle-driver</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>oracle.ojdbc6</groupId>
							<artifactId>ojdbc6</artifactId>
							<version>11</version>
							<packaging>jar</packaging>
							<file>libs/drivers/ojdbc6-11.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-jep</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>org.nfunk</groupId>
							<artifactId>jep</artifactId>
							<version>2.4.1</version>
							<packaging>jar</packaging>
							<file>libs/tools/jep-2.4.1.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-aspose-cells</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>aspose</groupId>
							<artifactId>aspose.cells</artifactId>
							<version>7.0.0</version>
							<packaging>jar</packaging>
							<file>libs/aspose/aspose-cells-7.0.0.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-aspose-pdf</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>aspose</groupId>
							<artifactId>aspose.pdf</artifactId>
							<version>2.9.0</version>
							<packaging>jar</packaging>
							<file>libs/aspose/aspose-pdf-2.9.0-jdk16.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-aspose-slides</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>aspose</groupId>
							<artifactId>aspose.slides</artifactId>
							<version>2.6.0</version>
							<packaging>jar</packaging>
							<file>libs/aspose/aspose.slides-2.6.0.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-aspose-words</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>aspose</groupId>
							<artifactId>aspose.words</artifactId>
							<version>7.0.0</version>
							<packaging>jar</packaging>
							<file>libs/aspose/aspose.words.jdk16-7.0.0.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-canyon</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>canyon</groupId>
							<artifactId>canyon</artifactId>
							<version>0.9.8</version>
							<packaging>jar</packaging>
							<file>libs/tools/canyon-0.9.8.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
					<execution>
						<id>install-jai-codec</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>validate</phase>
						<configuration>
							<groupId>jai</groupId>
							<artifactId>jai.codec</artifactId>
							<version>1.1.3</version>
							<packaging>jar</packaging>
							<file>libs/tools/jai_codec-1.1.3-alpha.jar</file>
							<generatePom>true</generatePom>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>