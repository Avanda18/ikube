<?xml version="1.0" encoding="UTF-8"?>

<project
        xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>ikube-com</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>ikube</groupId>
        <artifactId>ikube</artifactId>
        <version>4.4.1-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.7.1</version>
                <configuration>
                    <forkMode>once</forkMode>
                    <!-- Was: -XX:-UseSplitVerifier, now is: -noverify -->
                    <argLine>-javaagent:../../serenity/serenity.jar ${serenity-parameters} ${memory-parameters}
                    </argLine>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>copy-configuration</id>
                        <phase>install</phase>
                        <configuration>
                            <target>
                                <echo message="Base directory : ${basedir}, ">Base directory : ${basedir}</echo>

                                <delete dir="ikube"/>
                                <delete dir="../core/ikube"/>
                                <delete dir="../war/ikube"/>
                                <delete dir="../libs/ikube"/>
                                <delete dir="../../ikube"/>

                                <copydir src="../libs/src/main/resources/ikube" dest="ikube"/>
                                <copydir src="../libs/src/main/resources/analytics" dest="ikube/analytics"/>
                                <copydir src="../libs/src/main/resources/indexes/production" dest="ikube/production"/>
                                <copydir src="../libs/src/main/resources/indexes/integration" dest="ikube/integration"/>

                                <copydir src="../libs/src/main/resources/ikube" dest="../core/ikube"/>
                                <copydir src="../libs/src/main/resources/analytics" dest="../core/ikube/analytics"/>
                                <copydir src="../libs/src/main/resources/indexes/production"
                                         dest="../core/ikube/production"/>
                                <copydir src="../libs/src/main/resources/indexes/integration"
                                         dest="../core/ikube/integration"/>

                                <copydir src="../libs/src/main/resources/ikube" dest="../war/ikube"/>
                                <copydir src="../libs/src/main/resources/analytics" dest="../war/ikube/analytics"/>
                                <copydir src="../libs/src/main/resources/indexes/production"
                                         dest="../war/ikube/production"/>
                                <copydir src="../libs/src/main/resources/indexes/integration"
                                         dest="../war/ikube/integration"/>
                                <copydir src="../libs/src/main/resources/indexes/twitter" dest="../war/ikube/twitter"/>

                                <copydir src="../libs/src/main/resources/ikube" dest="../libs/ikube"/>
                                <copydir src="../libs/src/main/resources/analytics" dest="../libs/ikube/analytics"/>
                                <copydir src="../libs/src/main/resources/indexes/production"
                                         dest="../libs/ikube/production"/>

                                <copydir src="../libs/src/main/resources/ikube" dest="../../ikube"/>
                                <copydir src="../libs/src/main/resources/analytics" dest="../../ikube/analytics"/>
                                <copydir src="../libs/src/main/resources/indexes/production"
                                         dest="../../ikube/production"/>
                                <copydir src="../libs/src/main/resources/indexes/integration"
                                         dest="../../ikube/integration"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>