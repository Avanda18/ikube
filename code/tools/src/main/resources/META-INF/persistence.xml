<?xml version="1.0"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://java.sun.com/xml/ns/persistence
    	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

	<persistence-unit name="ToolsPersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<non-jta-data-source>nonXaDataSourceH2</non-jta-data-source>

		<class>ikube.datageneration.model.Persistable</class>

		<class>ikube.datageneration.model.faq.Faq</class>
		<class>ikube.datageneration.model.faq.Attachment</class>

		<class>ikube.datageneration.model.medical.Hospital</class>
		<class>ikube.datageneration.model.medical.Administration</class>
		<class>ikube.datageneration.model.medical.Person</class>
		<class>ikube.datageneration.model.medical.Doctor</class>
		<class>ikube.datageneration.model.medical.Patient</class>
		<class>ikube.datageneration.model.medical.Inpatient</class>
		<class>ikube.datageneration.model.medical.Condition</class>
		<class>ikube.datageneration.model.medical.Medication</class>
		<class>ikube.datageneration.model.medical.Treatment</class>
		<class>ikube.datageneration.model.medical.Record</class>
		<class>ikube.datageneration.model.medical.Address</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="openjpa.ConnectionFactoryProperties" value="PrettyPrint=true,PrettyPrintLineLength=150" />
			<property name="openjpa.Log" value="DefaultLevel=TRACE,SQL=TRACE,File=./openjpa.log" />
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
			<property name="openjpa.classLoadEnhancement" value="true" />
			<property name="openjpa.DynamicEnhancementAgent" value="true" />
			<property name="openjpa.RuntimeUnenhancedClasses" value="supported" />
			<property name="openjpa.Multithreaded" value="true" />
			
			<!--<property name="openjpa.ConnectionPassword" value="" />
			<property name="openjpa.ConnectionUserName" value="sa" />
			<property name="openjpa.ConnectionDriverName" value="org.h2.Driver" />
			<property name="openjpa.ConnectionURL" value="jdbc:h2:mem:search" />-->

			<!--<property name="openjpa.ConnectionPassword" value="db2admin" />
			<property name="openjpa.ConnectionUserName" value="db2admin" />
			<property name="openjpa.ConnectionDriverName" value="com.ibm.db2.jcc.DB2Driver" />
			<property name="openjpa.ConnectionURL" value="jdbc:db2://localhost:50000/ikube" />-->
			
			<!--<property name="openjpa.RemoteCommitProvider" value="sjvm" />
			<property name="openjpa.DataCache" value="true(CacheSize=500000, SoftReferenceSize=0)" />
			<property name="openjpa.QueryCache" value="CacheSize=500000, SoftReferenceSize=0" />
			<property name="openjpa.RefreshFromDataCache" value="true" />-->
		</properties>

	</persistence-unit>
</persistence>