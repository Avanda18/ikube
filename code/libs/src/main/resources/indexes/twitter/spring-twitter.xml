    <bean id="weka-classifier-smo-en" name="weka-classifier-smo-en" class="weka.classifiers.functions.SMO"/>
    <bean
        id="context-smo-en"
        name="context-smo-en"
        class="ikube.model.Context"
        property:name="sentiment-smo-en"
        property:analyzer-ref="sentiment-smo-en"
        property:filter-ref="string-to-word-vector-en"
        property:algorithm-ref="weka-classifier-smo-en"
