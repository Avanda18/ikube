        <ref bean="ikube.action.index.handler.strategy.LanguageFilterStrategy"/>
        <ref bean="ikube.action.index.handler.strategy.LanguageCleaningStrategy"/>
        <ref bean="ikube.action.index.handler.strategy.LanguageDetectionStrategy"/>
        <ref bean="ikube.action.index.handler.strategy.TwitterGeospatialEnrichmentStrategy"/>

        <!-- Train the language specific classifiers -->
        <ref bean="twitter-training-strategy-en"/>
        <ref bean="twitter-training-strategy-es"/>
        <ref bean="twitter-training-strategy-jp"/>
        <ref bean="twitter-training-strategy-cn"/>
        <ref bean="twitter-training-strategy-nl"/>
        <ref bean="twitter-training-strategy-fr"/>
        <ref bean="twitter-training-strategy-de"/>
        <ref bean="twitter-training-strategy-sv"/>
        <ref bean="twitter-training-strategy-th"/>
        <ref bean="twitter-training-strategy-ar"/>
        <ref bean="twitter-training-strategy-tr"/>
        <ref bean="twitter-training-strategy-ru"/>
        <!-- Use the trained language specific classifiers -->
        <ref bean="twitter-classification-strategy-en"/>
        <ref bean="twitter-classification-strategy-es"/>
        <ref bean="twitter-classification-strategy-jp"/>
        <ref bean="twitter-classification-strategy-cn"/>
        <ref bean="twitter-classification-strategy-nl"/>
