<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd">

	<bean
		id="indexContextOne"
		class="ikube.model.IndexContext"
		property:indexName="indexOne"
		property:maxAge="${max.age}"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="${buffer.size}"
		property:batchSize="${jdbc.batch.size}"
		property:internetBatchSize="${internet.batch.size}"
		property:mergeFactor="${merge.factor}"
		property:maxFieldLength="${max.field.length}"
		property:maxReadLength="${max.read.length}"
		property:queueTimeout="${max.age}"
		property:throttle="${throttle}"
		property:indexDirectoryPath="${index.directory.path}"
		property:indexables-ref="indexables" />
	<bean
		id="indexContextTwo"
		class="ikube.model.IndexContext"
		property:indexName="indexTwo"
		property:maxAge="${max.age}"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="${buffer.size}"
		property:batchSize="${jdbc.batch.size}"
		property:internetBatchSize="${internet.batch.size}"
		property:mergeFactor="${merge.factor}"
		property:maxFieldLength="${max.field.length}"
		property:maxReadLength="${max.read.length}"
		property:queueTimeout="${max.age}"
		property:throttle="${throttle}"
		property:indexDirectoryPath="${index.directory.path}"
		property:indexables-ref="indexables" />
	<bean
		id="indexContextThree"
		class="ikube.model.IndexContext"
		property:indexName="indexThree"
		property:maxAge="${max.age}"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="${buffer.size}"
		property:batchSize="${jdbc.batch.size}"
		property:internetBatchSize="${internet.batch.size}"
		property:mergeFactor="${merge.factor}"
		property:maxFieldLength="${max.field.length}"
		property:maxReadLength="${max.read.length}"
		property:queueTimeout="${max.age}"
		property:throttle="${throttle}"
		property:indexDirectoryPath="${index.directory.path}"
		property:indexables-ref="indexables" />
	<util:list id="indexables">
		<ref local="mail" />
		<ref local="internet" />
		<ref local="filesystem" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
		<ref local="tableOne" />
	</util:list>

	<bean
		id="tableOne"
		class="ikube.model.IndexableTable"
		property:name="faq"
		property:schema="db2admin"
		property:predicate="${faq.predicate}"
		property:primary="true"
		property:dataSource-ref="nonXaDataSource"
		property:children-ref="columnsOne" />
	<util:list id="columnsOne">
		<ref local="faqId" />
		<ref local="creationtimestamp" />
		<ref local="modifiedtimestamp" />
		<ref local="creator" />
		<ref local="modifier" />
		<ref local="question" />
		<ref local="answer" />
		<ref local="published" />
		<ref local="tableTwo" />
		<!--<ref local="tableThree" />-->
	</util:list>

	<bean
		id="faqId"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:idColumn="true"
		property:columnClass="java.lang.Long" />
	<bean
		id="creationtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="creationtimestamp"
		property:columnClass="java.sql.Timestamp" />
	<bean
		id="modifiedtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="modifiedtimestamp"
		property:columnClass="java.sql.Timestamp" />
	<bean
		id="creator"
		class="ikube.model.IndexableColumn"
		property:name="creator"
		property:columnClass="java.lang.String"
		property:columnLength="32" />
	<bean
		id="modifier"
		class="ikube.model.IndexableColumn"
		property:name="modifier"
		property:columnClass="java.lang.String"
		property:columnLength="32" />
	<bean
		id="question"
		class="ikube.model.IndexableColumn"
		property:name="question"
		property:fieldName="contents"
		property:columnClass="java.lang.String"
		property:columnLength="128" />
	<bean
		id="answer"
		class="ikube.model.IndexableColumn"
		property:name="answer"
		property:fieldName="contents"
		property:columnClass="java.lang.String"
		property:columnLength="128" />
	<bean
		id="published"
		class="ikube.model.IndexableColumn"
		property:name="published"
		property:fieldName="published"
		property:columnClass="java.lang.Boolean" />

	<bean
		id="tableTwo"
		class="ikube.model.IndexableTable"
		property:name="attachment"
		property:schema="db2admin"
		property:primary="false"
		property:dataSource-ref="nonXaDataSource"
		property:children-ref="columnsTwo" />
	<util:list id="columnsTwo">
		<ref local="attachmentFaqId" />
		<ref local="attachmentId" />
		<ref local="name" />
		<!--<ref local="attachment" />-->
		<ref local="length" />
	</util:list>

	<bean
		id="attachmentFaqId"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:fieldName="attachmentFaqId"
		property:foreignKey-ref="faqId"
		property:columnClass="java.lang.Long" />
	<bean
		id="attachmentId"
		class="ikube.model.IndexableColumn"
		property:name="attachmentId"
		property:fieldName="attachmentId"
		property:idColumn="true"
		property:columnClass="java.lang.Long" />
	<bean
		id="name"
		class="ikube.model.IndexableColumn"
		property:name="name"
		property:fieldName="name"
		property:columnClass="java.lang.String"
		property:columnLength="64" />
	<bean
		id="attachment"
		class="ikube.model.IndexableColumn"
		property:name="attachment"
		property:fieldName="attachment"
		property:nameColumn-ref="name"
		property:columnClass="java.sql.Blob"
		property:columnLength="128" />
	<bean
		id="length"
		class="ikube.model.IndexableColumn"
		property:name="length"
		property:fieldName="length"
		property:columnClass="java.lang.Integer" />
	
	<bean
		id="tableThree"
		class="ikube.model.IndexableTable"
		property:name="version"
		property:schema="db2admin"
		property:primary="false"
		property:dataSource-ref="nonXaDataSource"
		property:children-ref="columnsThree" />
	<util:list id="columnsThree">
		<ref local="versionFaqId" />
		<ref local="versionId" />
		<ref local="versionCreationtimestamp" />
		<ref local="versionModifiedtimestamp" />
		<ref local="versionCreator" />
		<ref local="versionModifier" />
		<ref local="versionQuestion" />
		<ref local="versionAnswer" />
		<ref local="versionPublished" />
		<ref local="tableFour" />
	</util:list>

	<bean
		id="versionFaqId"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:fieldName="versionfaqId"
		property:foreignKey-ref="faqId"
		property:columnClass="java.lang.Long" />
	<bean
		id="versionId"
		class="ikube.model.IndexableColumn"
		property:name="versionId"
		property:idColumn="true"
		property:columnClass="java.lang.Long" />
	<bean
		id="versionCreationtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="creationtimestamp"
		property:columnClass="java.sql.Timestamp" />
	<bean
		id="versionModifiedtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="modifiedtimestamp"
		property:columnClass="java.sql.Timestamp" />
	<bean
		id="versionCreator"
		class="ikube.model.IndexableColumn"
		property:name="creator"
		property:columnClass="java.lang.String"
		property:columnLength="32" />
	<bean
		id="versionModifier"
		class="ikube.model.IndexableColumn"
		property:name="modifier"
		property:columnClass="java.lang.String"
		property:columnLength="32" />
	<bean
		id="versionQuestion"
		class="ikube.model.IndexableColumn"
		property:name="question"
		property:fieldName="versionContents"
		property:columnClass="java.lang.String"
		property:columnLength="128" />
	<bean
		id="versionAnswer"
		class="ikube.model.IndexableColumn"
		property:name="answer"
		property:fieldName="versionContents"
		property:columnClass="java.lang.String"
		property:columnLength="128" />
	<bean
		id="versionPublished"
		class="ikube.model.IndexableColumn"
		property:name="published"
		property:fieldName="versionPublished"
		property:columnClass="java.lang.Boolean" />
		
	<bean
		id="tableFour"
		class="ikube.model.IndexableTable"
		property:name="versionAttachment"
		property:schema="db2admin"
		property:primary="false"
		property:dataSource-ref="nonXaDataSource"
		property:children-ref="columnsFour" />
	<util:list id="columnsFour">
		<ref local="attachmentVersionId" />
		<ref local="versionAttachmentId" />
		<ref local="versionName" />
		<ref local="versionAttachment" />
		<ref local="versionLength" />
	</util:list>

	<bean
		id="attachmentVersionId"
		class="ikube.model.IndexableColumn"
		property:name="versionId"
		property:fieldName="attachmentVersionId"
		property:foreignKey-ref="versionId"
		property:columnClass="java.lang.Long" />
	<bean
		id="versionAttachmentId"
		class="ikube.model.IndexableColumn"
		property:name="attachmentId"
		property:fieldName="versionAttachmentId"
		property:idColumn="true"
		property:columnClass="java.lang.Long" />
	<bean
		id="versionName"
		class="ikube.model.IndexableColumn"
		property:name="name"
		property:fieldName="versionName"
		property:columnClass="java.lang.String"
		property:columnLength="64" />
	<bean
		id="versionAttachment"
		class="ikube.model.IndexableColumn"
		property:name="attachment"
		property:fieldName="versionAttachment"
		property:nameColumn-ref="versionName"
		property:columnClass="java.sql.Blob"
		property:columnLength="128" />
	<bean
		id="versionLength"
		class="ikube.model.IndexableColumn"
		property:name="length"
		property:fieldName="versionLength"
		property:columnClass="java.lang.Integer" />
		
	<bean
		id="mail"
		class="ikube.model.IndexableEmail"
		property:idField="identifier"
		property:contentField="email"
		property:mailHost="pop.gmail.com"
		property:name="ikube.email"
		property:password="caherline"
		property:port="995"
		property:protocol="pop3"
		property:secureSocketLayer="true"
		property:titleField="title"
		property:username="ikube.ikube@gmail.com" />

	<bean
		id="internet"
		class="ikube.model.IndexableInternet"
		property:name="internet"
		property:url="${url}" />
	
	<bean
		id="filesystem"
		class="ikube.model.IndexableFileSystem"
		property:contentFieldName="contents"
		property:excludedPattern=".*(.svn).*|.*(database).*"
		property:lastModifiedFieldName="lastmodified"
		property:lengthFieldName="length"
		property:name="files"
		property:nameFieldName="name"
		property:path="${files.path}"
		property:pathFieldName="path" />

	<!-- Utility classes -->
	<bean
		class="ikube.toolkit.Mailer"
		property:auth="true"
		property:mailHost="smtp.gmail.com"
		property:password="caherline"
		property:port="465"
		property:protocol="pop3"
		property:recipients="ikube.ikube@gmail.com"
		property:sender="ikube.ikube@gmail.com"
		property:user="ikube.ikube" />

</beans>