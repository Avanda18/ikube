<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:property-placeholder
		location="classpath:/META-INF/spring.properties" />

	<bean
		id="faqIndexContext"
		class="ikube.model.IndexContext"
		property:name="faq"
		property:indexName="faq"
		property:maxAge="${max.age}"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="${buffer.size}"
		property:batchSize="${jdbc.batch.size}"
		property:mergeFactor="${merge.factor}"
		property:maxFieldLength="${max.field.length}"
		property:maxReadLength="${max.read.length}"
		property:queueTimeout="${max.age}"
		property:indexDirectoryPath="${index.directory.path}"
		property:indexables-ref="faqIndexables"
		property:indexableVisitors-ref="faqIndexableVisitors" />
	<util:list id="faqIndexables">
		<ref local="faqTable" />
	</util:list>
	<util:list id="faqIndexableVisitors">
		<ref local="faqTableVisitor" />
	</util:list>

	<bean
		id="faqTableVisitor"
		class="ikube.index.visitor.database.IndexableTableVisitor"
		property:indexContext-ref="faqIndexContext"
		property:indexableType="ikube.model.IndexableTable"
		property:indexableColumnVisitor-ref="faqColumnVisitor" />
	<bean
		id="faqColumnVisitor"
		class="ikube.index.visitor.database.IndexableColumnVisitor"
		property:indexableType="ikube.model.IndexableColumn" />

	<bean
		id="faqTable"
		class="ikube.model.IndexableTable"
		property:name="faq"
		property:sql="select * from faq"
		property:dataSource-ref="nonXaDataSource"
		property:children-ref="faqColumns" />
	<util:set id="faqColumns">
		<ref local="faqId" />
		<ref local="creationtimestamp" />
		<ref local="modifiedtimestamp" />
		<ref local="creator" />
		<ref local="modifier" />
		<ref local="question" />
		<ref local="answer" />
	</util:set>
	<bean
		id="faqId"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:idColumn="true" />
	<bean
		id="creationtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="creationtimestamp" />
	<bean
		id="modifiedtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="modifiedtimestamp" />
	<bean
		id="creator"
		class="ikube.model.IndexableColumn"
		property:name="creator" />
	<bean
		id="modifier"
		class="ikube.model.IndexableColumn"
		property:name="modifier" />
	<bean
		id="question"
		class="ikube.model.IndexableColumn"
		property:name="question"
		property:fieldName="contents" />
	<bean
		id="answer"
		class="ikube.model.IndexableColumn"
		property:name="answer"
		property:fieldName="contents" />

</beans>