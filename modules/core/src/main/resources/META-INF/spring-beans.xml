<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:transaction="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd
            http://www.springframework.org/schema/tx
            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<aop:aspectj-autoproxy proxy-target-class="true" />

	<bean
		id="ikube.cluster.LockManager"
		class="ikube.cluster.LockManager"
		property:timeout="3000" />
	<bean
		class="ikube.cluster.ClusterManager"
		property:lockManager-ref="ikube.cluster.LockManager" />
	<bean
		class="ikube.aspect.Synchronize"
		property:lockManager-ref="ikube.cluster.LockManager" />
	<bean
		id="ikube.database.DataBaseOdb"
		class="ikube.database.DataBaseOdb"
		destroy-method="close">
	</bean>
	<bean
		class="ikube.IndexEngine"
		property:actions-ref="actions" />

	<bean id="ikube.action.Close" class="ikube.action.Close" />
	<bean id="ikube.action.Delete" class="ikube.action.Delete" />
	<bean id="ikube.action.Index" class="ikube.action.Index" />
	<bean id="ikube.action.Open" class="ikube.action.Open" />
	<bean id="ikube.action.Reset" class="ikube.action.Reset" />
	<bean
		id="ikube.action.Synchronize"
		class="ikube.action.Synchronize"
		property:ipAddressPattern="ip.address"
		property:serviceName="synchronization"
		property:targetNamespace="http://ikube.synchronization/"
		property:endpointUri="http://ip.address:8082/service/ISynchronizationWebService?wsdl" />
	<util:list id="actions">
		<ref local="ikube.action.Reset" />
		<ref local="ikube.action.Close" />
		<ref local="ikube.action.Open" />
		<ref local="ikube.action.Index" />
		<ref local="ikube.action.Delete" />
		<ref local="ikube.action.Synchronize" />
	</util:list>

	<bean id="ikube.index.parse.mime.MimeMapper" class="ikube.index.parse.mime.MimeMapper">
		<constructor-arg value="/META-INF/mime/mime-mapping.xml" />
	</bean>
	<bean id="ikube.index.parse.mime.MimeTypes" class="ikube.index.parse.mime.MimeTypes">
		<constructor-arg value="/META-INF/mime/mime-types.xml" />
	</bean>

	<bean
		id="ikube.aspect.Profile"
		class="ikube.aspect.Profile" />
	<aop:config proxy-target-class="false">
		<aop:aspect ref="ikube.aspect.Profile">
			<aop:around method="profile" pointcut="execution(* ikube.index.visitor.database.*.*(..))" />
		</aop:aspect>
	</aop:config>

	<bean
		id="ikube.service.SearcherWebService"
		class="ikube.service.SearcherWebService" />
	<bean
		id="ikube.service.SynchronizationWebService"
		class="ikube.service.SynchronizationWebService" />
	<bean
		id="ikube.service.WebServicePublisher"
		class="ikube.service.WebServicePublisher"
		property:addresses-ref="addresses"
		property:implementors-ref="implementors"
		init-method="publish" />
	<util:list id="addresses">
		<value>http://localhost:8081/service/ISearcherWebService</value>
		<value>http://localhost:8082/service/ISynchronizationWebService</value>
	</util:list>
	<util:list id="implementors">
		<ref local="ikube.service.SearcherWebService" />
		<ref local="ikube.service.SynchronizationWebService" />
	</util:list>
	<bean
		id="ikube.service.SearcherWebServiceExecuter"
		class="ikube.service.SearcherWebServiceExecuter"
		property:configurationName="faq"
		property:end="101"
		property:endpointUri="http://localhost:8081/service/ISearcherWebService?wsdl"
		property:fieldName="contents"
		property:fragment="true"
		property:resultsSizeMinimum="1"
		property:searchString="clinch crackerjack books gall thoroughgoing
			tall pissed committee greathearted cyborg devotional tremor"
		property:start="0" />

	<bean
		id="ikube.toolkit.Timer"
		class="ikube.toolkit.Timer"
		property:type="timer"
		property:delay="${delay}"
		property:period="${period}" />
	<bean
		id="ikube.toolkit.Timer.Reporter"
		class="ikube.toolkit.Timer"
		property:type="report"
		property:delay="${report.delay}"
		property:period="${report.period}" />
	<bean
		id="ikube.toolkit.Timer.Profile"
		class="ikube.toolkit.Timer"
		property:type="profile"
		property:delay="${profiling.delay}"
		property:period="${profiling.period}" />
	<bean
		id="ikube.toolkit.Timer.WebService"
		class="ikube.toolkit.Timer"
		property:type="service"
		property:delay="${web.service.delay}"
		property:period="${web.service.period}" />
	<bean
		id="ikube.toolkit.Timer.LockManager"
		class="ikube.toolkit.Timer"
		property:type="clustering"
		property:delay="${lock.manager.delay}"
		property:period="${lock.manager.period}" />

	<util:list id="scheduled.tasks">
		<ref local="ikube.toolkit.Timer" />
		<ref local="ikube.toolkit.Timer.Profile" />
		<ref local="ikube.toolkit.Timer.WebService" />
		<ref local="ikube.toolkit.Timer.LockManager" />
	</util:list>

	<bean
		class="ikube.toolkit.Scheduler">
		<constructor-arg ref="scheduled.tasks" />
	</bean>

</beans>