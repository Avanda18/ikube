<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:transaction="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd
            http://www.springframework.org/schema/tx
            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<aop:aspectj-autoproxy proxy-target-class="true" />
	
	<bean
		class="ikube.IndexEngine"
		property:actions-ref="actions" />
	<util:list id="actions">
		<!--<ref local="ikube.action.Synchronize" />-->
		<ref local="ikube.action.Reset" />
		<ref local="ikube.action.Close" />
		<ref local="ikube.action.Open" />
		<ref local="ikube.action.Index" />
		<ref local="ikube.action.Delete" />
	</util:list>
	<bean id="ikube.action.Synchronize" class="ikube.action.Synchronize" />
	<bean id="ikube.action.Reset" class="ikube.action.Reset" />
	<bean id="ikube.action.Close" class="ikube.action.Close" />
	<bean id="ikube.action.Open" class="ikube.action.Open" />
	<bean id="ikube.action.Index" class="ikube.action.Index" />
	<bean id="ikube.action.Delete" class="ikube.action.Delete" />
	
	<bean
		id="ikube.database.mem.DataBaseMem"
		class="ikube.database.mem.DataBaseMem"
		property:dataBase-ref="ikube.database.odb.DataBaseOdb" />
	<bean
		id="ikube.database.odb.DataBaseOdb"
		class="ikube.database.odb.DataBaseOdb"
		lazy-init="true"
		init-method="initialise"
		destroy-method="close">
		<property name="indexes">
			<list>
				<bean
					id="ikube.database.odb.Index.Url"
					class="ikube.database.odb.Index"
					property:className="ikube.model.Url">
					<property name="fieldNames">
						<list>
							<!--<value>id</value>
							<value>hash</value>-->
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean
		id="ikube.cluster.IClusterManager"
		class="ikube.cluster.ClusterManager"
		lazy-init="true">
		<property name="cache">
			<bean
				id="ikube.cluster.cache.Cache"
				class="ikube.cluster.cache.Cache"
				lazy-init="false"
				init-method="initialise"
				property:dataBase-ref="ikube.database.mem.DataBaseMem" />
		</property>
	</bean>
	
	<bean
		class="ikube.index.handler.internet.IndexableInternetHandler"
		property:threads="${internet.handler.threads}" />
	<bean
		class="ikube.index.handler.email.IndexableEmailHandler"
		property:threads="${email.handler.threads}" />
	<bean
		class="ikube.index.handler.filesystem.IndexableFilesystemHandler"
		property:threads="${filesystem.handler.threads}" />
	<bean
		class="ikube.index.handler.database.IndexableTableHandler"
		property:threads="${table.handler.threads}" />

	<bean id="ikube.index.parse.mime.MimeMapper" class="ikube.index.parse.mime.MimeMapper">
		<constructor-arg value="/META-INF/mime/mime-mapping.xml" />
	</bean>
	<bean id="ikube.index.parse.mime.MimeTypes" class="ikube.index.parse.mime.MimeTypes">
		<constructor-arg value="/META-INF/mime/mime-types.xml" />
	</bean>

	<bean
		id="ikube.service.SearcherWebService"
		class="ikube.service.SearcherWebService" />
	<bean
		id="ikube.service.MonitoringService"
		class="ikube.service.MonitoringService" />
	<bean
		id="ikube.service.WebServicePublisher"
		class="ikube.service.WebServicePublisher"
		init-method="publish" >
		<constructor-arg ref="ikube.cluster.IClusterManager" />
		<property name="protocols">
			<list>
				<value>${service.protocol}</value>
				<value>${service.protocol}</value>
			</list>
		</property>
		<property name="ports">
			<list>
				<value>${service.port}</value>
				<value>${monitoring.service.port}</value>
			</list>
		</property>
		<property name="paths">
			<list>
				<value>${web.service.path}</value>
				<value>${monitoring.service.path}</value>
			</list>
		</property>
		<property name="implementors">
			<list>
				<ref local="ikube.service.SearcherWebService" />
				<ref local="ikube.service.MonitoringService" />
			</list>
		</property>
	</bean>
	
	<bean
		id="ikube.service.SearcherWebServiceExecuter"
		class="ikube.service.SearcherWebServiceExecuter"
		property:indexName="${searcher.index.name}"
		property:protocol="${service.protocol}"
		property:port="${service.port}"
		property:path="${web.service.path}"
		property:fieldName="${searcher.field.name}"
		property:fragment="${searcher.fragment}"
		property:resultsSizeMinimum="${searcher.minimum.results.size}"
		property:searchString="${searcher.search.string}"
		property:start="${searcher.start.index}"
		property:end="${searcher.end.index}" />

	<bean
		class="ikube.listener.Scheduler"
		init-method="initialize"
		property:schedules-ref="scheduled.tasks" />
	<util:list id="scheduled.tasks">
		<ref local="ikube.listener.Schedule" />
		<ref local="ikube.listener.Schedule.SearcherWebServiceExecuter" />
	</util:list>
	
	<bean
		id="ikube.listener.Schedule"
		class="ikube.listener.Schedule"
		property:type="timer"
		property:delay="${delay}"
		property:period="${period}" />
	<bean
		id="ikube.listener.Schedule.SearcherWebServiceExecuter"
		class="ikube.listener.Schedule"
		property:type="service"
		property:delay="${web.service.delay}"
		property:period="${web.service.period}" />
	
	<bean 
		id="ikube.logging.Monitor" 
		class="ikube.logging.Monitor" />
	<aop:config proxy-target-class="true">
		<aop:aspect ref="ikube.logging.Monitor">
			<aop:around method="monitor" pointcut="execution(* ikube.index.handler.internet.crawler.PageHandler.*(..))" />
		</aop:aspect>
	</aop:config>
</beans>