<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:transaction="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd
            http://www.springframework.org/schema/tx
            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<aop:aspectj-autoproxy proxy-target-class="true" />

	<bean
		class="ikube.cluster.ClusterManagerLocal" />
	<bean
		class="ikube.IndexEngine"
		property:actions-ref="actions" />
	<bean
		id="ikube.database.odb.DataBaseOdb"
		class="ikube.database.odb.DataBaseOdb"
		init-method="initialise"
		lazy-init="false"
		destroy-method="close">
		<property name="indexes">
			<list>
				<bean
					id="ikube.database.odb.Index.Url"
					class="ikube.database.odb.Index"
					property:className="ikube.model.Url">
					<property name="fieldNames">
						<list>
							<value>id</value>
							<value>url</value>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="ikube.action.Reset" class="ikube.action.Reset" />
	<bean id="ikube.action.Close" class="ikube.action.Close" />
	<bean id="ikube.action.Open" class="ikube.action.Open" />
	<bean id="ikube.action.Index" class="ikube.action.Index" />
	<bean id="ikube.action.Delete" class="ikube.action.Delete" />
	<util:list id="actions">
		<ref local="ikube.action.Reset" />
		<ref local="ikube.action.Close" />
		<ref local="ikube.action.Open" />
		<ref local="ikube.action.Index" />
		<ref local="ikube.action.Delete" />
	</util:list>
	
	<bean
		class="ikube.index.handler.internet.IndexableInternetHandler"
		property:dataBase-ref="ikube.database.odb.DataBaseOdb"
		property:threads="${internet.handler.threads}" />
	<bean
		class="ikube.index.handler.email.IndexableEmailHandler"
		property:dataBase-ref="ikube.database.odb.DataBaseOdb"
		property:threads="${email.handler.threads}" />
	<bean
		class="ikube.index.handler.filesystem.IndexableFilesystemHandler"
		property:dataBase-ref="ikube.database.odb.DataBaseOdb"
		property:threads="${filesystem.handler.threads}" />
	<bean
		class="ikube.index.handler.database.IndexableTableHandler"
		property:dataBase-ref="ikube.database.odb.DataBaseOdb"
		property:threads="${table.handler.threads}" />

	<bean id="ikube.index.parse.mime.MimeMapper" class="ikube.index.parse.mime.MimeMapper">
		<constructor-arg value="/META-INF/mime/mime-mapping.xml" />
	</bean>
	<bean id="ikube.index.parse.mime.MimeTypes" class="ikube.index.parse.mime.MimeTypes">
		<constructor-arg value="/META-INF/mime/mime-types.xml" />
	</bean>

	<bean
		id="ikube.listener.Schedule"
		class="ikube.listener.Schedule"
		property:type="timer"
		property:delay="${delay}"
		property:period="${period}" />
	<bean
		class="ikube.listener.Scheduler">
		<constructor-arg ref="scheduled.tasks" />
	</bean>
	<util:list id="scheduled.tasks">
		<ref local="ikube.listener.Schedule" />
	</util:list>
</beans>