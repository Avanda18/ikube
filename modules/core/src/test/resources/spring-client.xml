<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:property="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"

	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/aop
            http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean
		id="faqIndexContext"
		class="ikube.model.IndexContext"
		property:name="jackal"
		property:indexName="faq"
		property:maxAge="${max.age}"
		property:compoundFile="${compound.file}"
		property:bufferedDocs="${buffered.docs}"
		property:bufferSize="${buffer.size}"
		property:batchSize="${jdbc.batch.size}"
		property:mergeFactor="${merge.factor}"
		property:maxFieldLength="${max.field.length}"
		property:maxReadLength="${max.read.length}"
		property:queueTimeout="${max.age}"
		property:indexDirectoryPath="${index.directory.path}"
		property:indexables-ref="faqIndexables"
		property:indexableVisitors-ref="faqIndexableVisitors" />
	<util:list id="faqIndexables">
		<ref local="files" />
		<ref local="ikubeMail" />
		<ref local="ikubeWiki" />
		<ref local="faqTable" />
	</util:list>
	<util:list id="faqIndexableVisitors">
		<ref local="filesVisitor" />
		<ref local="ikubeMailVisitor" />
		<ref local="ikubeWikiVisitor" />
		<ref local="faqTableVisitor" />
	</util:list>

	<!-- Indexable visitors -->
	<bean
		id="ikubeWikiVisitor"
		class="ikube.index.visitor.internet.IndexableInternetVisitor"
		property:indexableType="ikube.model.IndexableInternet"
		property:indexContext-ref="faqIndexContext"
		property:dataBase-ref="ikube.database.DataBaseOdb" />
	<bean
		id="ikubeMailVisitor"
		class="ikube.index.visitor.email.IndexableEmailVisitor"
		property:indexContext-ref="faqIndexContext"
		property:indexableType="ikube.model.IndexableEmail" />
	<bean
		id="filesVisitor"
		class="ikube.index.visitor.filesystem.IndexableFileSystemVisitor"
		property:indexableType="ikube.model.IndexableFileSystem"
		property:indexContext-ref="faqIndexContext" />
	<bean
		id="faqTableVisitor"
		class="ikube.index.visitor.database.IndexableTableVisitor"
		property:indexContext-ref="faqIndexContext"
		property:indexableType="ikube.model.IndexableTable"
		property:indexableColumnVisitor-ref="faqColumnVisitor"
		property:fetchSize="${jdbc.fetch.size}" />
	<bean
		id="faqColumnVisitor"
		class="ikube.index.visitor.database.IndexableColumnVisitor"
		property:indexableType="ikube.model.IndexableColumn" />

	<!-- Indexables -->
	<bean
		id="faqTable"
		class="ikube.model.IndexableTable"
		property:name="faq"
		property:sql="select faq.faqid, faq.answer, faq.creationtimestamp, faq.creator, faq.modifiedtimestamp, faq.modifier,
			faq.published, faq.question, attachment.attachmentid, attachment.name, attachment.attachment,
			attachment.length, attachment.faqid from faq, attachment where faq.faqid = attachment.faqid"
		property:dataSource-ref="nonXaDataSource"
		property:children-ref="faqColumns" />
	<util:set id="faqColumns">
		<ref local="faqId" />
		<ref local="creationtimestamp" />
		<ref local="modifiedtimestamp" />
		<ref local="creator" />
		<ref local="modifier" />
		<ref local="question" />
		<ref local="answer" />
		<ref local="attachmentid" />
		<ref local="name" />
		<ref local="attachment" />
		<ref local="length" />
	</util:set>
	<bean
		id="faqId"
		class="ikube.model.IndexableColumn"
		property:name="faqId"
		property:idColumn="true" />
	<bean
		id="creationtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="creationtimestamp" />
	<bean
		id="modifiedtimestamp"
		class="ikube.model.IndexableColumn"
		property:name="modifiedtimestamp" />
	<bean
		id="creator"
		class="ikube.model.IndexableColumn"
		property:name="creator" />
	<bean
		id="modifier"
		class="ikube.model.IndexableColumn"
		property:name="modifier" />
	<bean
		id="question"
		class="ikube.model.IndexableColumn"
		property:name="question"
		property:fieldName="contents" />
	<bean
		id="answer"
		class="ikube.model.IndexableColumn"
		property:name="answer"
		property:fieldName="contents" />
	<bean
		id="attachmentid"
		class="ikube.model.IndexableColumn"
		property:name="attachmentid"
		property:fieldName="attachmentid" />
	<bean
		id="name"
		class="ikube.model.IndexableColumn"
		property:name="name"
		property:fieldName="name" />
	<bean
		id="attachment"
		class="ikube.model.IndexableColumn"
		property:name="attachment"
		property:fieldName="attachment"
		property:indexableColumn-ref="name" />
	<bean
		id="length"
		class="ikube.model.IndexableColumn"
		property:name="length"
		property:fieldName="length" />

	<bean
		id="ikubeMail"
		class="ikube.model.IndexableEmail"
		property:idField="identifier"
		property:contentField="email"
		property:mailHost="pop.gmail.com"
		property:name="ikube.email"
		property:password="caherline"
		property:port="995"
		property:protocol="pop3"
		property:secureSocketLayer="true"
		property:titleField="title"
		property:username="ikube.ikube@gmail.com" />

	<bean
		id="files"
		class="ikube.model.IndexableFileSystem"
		property:contentFieldName="contents"
		property:excludedPattern=".*(.svn).*|.*(database).*"
		property:lastModifiedFieldName="lastmodified"
		property:lengthFieldName="length"
		property:name="files"
		property:nameFieldName="name"
		property:path="${files.path}"
		property:pathFieldName="path" />

	<bean
		id="ikubeWiki"
		class="ikube.model.IndexableInternet"
		property:name="ikubeWiki"
		property:url="http://code.google.com/p/ikube/wiki/PageName" />

	<!-- Utility classes -->
	<bean
		class="ikube.toolkit.Mailer"
		property:auth="true"
		property:mailHost="smtp.gmail.com"
		property:password="caherline"
		property:port="465"
		property:protocol="pop3"
		property:recipients="ikube.ikube@gmail.com"
		property:sender="ikube.ikube@gmail.com"
		property:user="ikube.ikube" />

</beans>